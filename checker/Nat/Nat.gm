(* ペアノ自然数の和と積，大小比較 *)

[Syntax]

n in Nat ::= Z
          |  S(n)

(*
  Nat, n:Nat, Z:Nat[], S:Nat[Nat]
*)

[Judgments]

(* セミコロンは入力と出力の区切り．宣言にだけ必要 *)

PlusIs(n1, n2; n3);
MultIs(n1, n2; n3);

[Rules]

P-Zero: PlusIs(Z, n, n) :- ;
P-Succ: PlusIs(S(n1), n2, S(n)) :- PlusIs(n1, n2, n) ;

M-Zero: MultIs(Z, n, Z) :- ;
M-Succ: MultIs(S(n1), n2, n4) :- MultIs(n1, n2, n3), PlusIs(n2, n3, n4);
